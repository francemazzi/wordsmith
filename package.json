{
  "name": "wordsmith-ts",
  "version": "0.1.3",
  "description": "A lightweight functional library to extract and replace variables in Word (.docx) files",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:manual": "node test-manual.js",
    "test:all": "npm test && npm run test:manual",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "docx",
    "word",
    "document",
    "template",
    "variables",
    "replacement",
    "xml",
    "office",
    "tables"
  ],
  "author": "Francesco",
  "license": "MIT",
  "dependencies": {
    "fast-xml-parser": "^4.3.2",
    "jszip": "^3.10.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.3.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
